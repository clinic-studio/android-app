<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="220dp"
    >

    <ImageView
        android:id="@+id/post_main_image_view"

        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
    />
    
    <FrameLayout
        android:id="@+id/post_blur_background_view"
        
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toTopOf="@+id/post_blur_background_placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
    />

    <Space
        android:id="@+id/post_blur_background_placeholder"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toTopOf="@+id/post_category_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginBottom="@dimen/margin_small"
    />

    <TextView
        android:id="@+id/post_category_text_view"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toTopOf="@+id/post_title_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginBottom="@dimen/margin_smaller"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginRight="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_default"

        style="@style/TextAppearance.Tag"

        tools:text="Reumatología"
    />

    <TextView
        android:id="@+id/post_title_text_view"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toTopOf="@+id/post_author_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginRight="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_default"
        android:layout_marginBottom="@dimen/margin_small"

        style="@style/TextAppearance.Title"
        android:maxLines="2"
        android:ellipsize="end"

        tools:text="Las espondiloartropatías: artritis psoriásica"
    />
    
    <TextView
        android:id="@+id/post_author_text_view"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/post_publish_date_text_view"

        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginRight="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_default"
        android:layout_marginBottom="@dimen/margin_small"

        style="@style/TextAppearance.Subtitle"
        android:maxLines="1"
        android:ellipsize="end"

        tools:text="por Rodolfo Cano"
    />

    <TextView
        android:id="@+id/post_publish_date_text_view"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBaseline_toBaselineOf="@+id/post_author_text_view"
        app:layout_constraintLeft_toRightOf="@+id/post_author_text_view"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginRight="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_default"

        style="@style/TextAppearance.Subtitle"
        android:maxLines="1"
        android:ellipsize="end"

        tools:text="hace 12 horas"
    />

</android.support.constraint.ConstraintLayout>